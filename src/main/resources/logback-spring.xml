<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 프로퍼티 정의 -->
    <property name="LOG_PATH" value="logs"/>
    <property name="APP_NAME" value="mindlog"/>

    <!-- JSON 인코더 기본 설정 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 콘솔 출력 (개발용 - 프로파일로 제어 가능) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>profileId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 애플리케이션 로그 파일 (일별 로테이션) -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/app.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>profileId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 보안 감사 로그 파일 -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/security.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>profileId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
            <customFields>{"log_type":"security_audit"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 성능 로그 파일 -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/performance.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/performance.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>profileId</includeMdcKeyName>
            <customFields>{"log_type":"performance"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- SQL 로그 파일 -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/sql.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <customFields>{"log_type":"sql"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 비동기 Appender (성능 최적화) -->
    <appender name="ASYNC_APP_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="APP_FILE"/>
    </appender>

    <appender name="ASYNC_SECURITY_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="SECURITY_FILE"/>
    </appender>

    <appender name="ASYNC_PERFORMANCE_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="PERFORMANCE_FILE"/>
    </appender>

    <appender name="ASYNC_SQL_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="SQL_FILE"/>
    </appender>

    <!-- 로거 설정 -->

    <!-- 보안 감사 로거 -->
    <logger name="com.mindlog.global.logging.security" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_SECURITY_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 성능 로거 -->
    <logger name="com.mindlog.global.logging.aspect" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_PERFORMANCE_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- HTTP 요청 로거 -->
    <logger name="com.mindlog.global.logging.filter" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- P6Spy SQL 로거 -->
    <logger name="p6spy" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_SQL_FILE"/>
    </logger>

    <!-- Spring Security 로거 -->
    <logger name="org.springframework.security" level="WARN"/>

    <!-- Hibernate 로거 (P6Spy로 대체하므로 비활성화) -->
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>

    <!-- 루트 로거 -->
    <root level="INFO">
        <appender-ref ref="ASYNC_APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
